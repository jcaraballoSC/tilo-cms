<ul class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li class="active">Contenidos</li>
  </ul>
  <%= render 'shared/flash.html.erb' %>
  <h2 class="title-panel"><%= @title_main %></h2>
  <div class="button-rigth-action">
   <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
   <i class="glyphicon glyphicon-upload"></i> Subir archivos</button>
  </div>
          <%= form_tag '/delete_media', method: :delete do %>
          <div class="row">
            <div class="col-lg-6">
              <%= submit_tag "Eliminar", id: "delete", class: "btn btn-danger", disabled: @uploads.empty? %>
            </div>
          </div>
      <% if @uploads.empty? %>
                <h5 id="no-media">No hay contenidos para esta emisi√≥n</h5>
              <% else %>
              <div class="sortable">
       <% @uploads.each do |upload| %>
      <div class="list-sor" data-id="<%= upload.position %>">
     <span class="move glyphicon glyphicon-move"></span>
      <span class="tx"><img src="<%= upload.name %>" witdth="100px" height="60px"></span>
      <span class="txcheck"><%= check_box_tag "upload_contents[]", upload.id %></span>
    </div>
    <% end %>
<% end %>
<% end %>
 </div>

 <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog media">
    <div class="modal-content media">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>
      <div class="modal-body">
   <%= form_for@upload,:html => {:multipart => true} do |f| %>
	 <%= hidden_field_tag :emission_id, @emission.id%>
      <div class="form-group med">
      <%= f.label :start_publish, 'Inicio', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field  :start_publish, class: 'form-control' %>
        </div>
        </div>
        <div class="form-group med">
        <%= f.label :end_publish, 'Fin', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field   :end_publish, class: 'form-control' %>
        </div>
        </div>
         <div class="form-group">
         <div class="fileUpload btn btn-primary">
		<span>Elegir archivos...</span>
        <%= f.file_field :name, class: 'upload'%>
        </div>
        </div>
          <div class="btnsub">
           <%= f.submit "Subir archivos", :class => 'btn btn-primary pull-right upload' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
var ready, set_positions;

set_positions = function(){
    // loop through and give each task a data-pos
    // attribute that holds its position in the DOM
    $('.panel.panel-default').each(function(i){
        $(this).attr("data-pos",i+1);
    });
}

ready = function(){

    // call set_positions function
    set_positions();
    
    $('.sortable').sortable();
}

$(document).ready(ready);
/**
 * if using turbolinks
 */
$(document).on('page:load', ready);

</script>
