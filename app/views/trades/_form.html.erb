<%= form_for(@trade) do |f| %>
  <% if @trade.errors.any? %>
    <div class="bs-component">
        <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <h4 class="messages">Error!</h4>
                <ul>
                <% @trade.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
                </ul>
        </div>
  </div>
  <% end %>
  <div class="form-horizontal">
    <fieldset>
      <legend><%= @title_form %></legend>
        <div class="form-group">
        <%= f.label :name, 'Nombre', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control'  %>
        </div>
        </div>
        </fieldset>
  <div class="actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary pull-right' %>
  </div>
     </div>
</div>
<% end %>
