<%= form_for(@power) do |f| %>
  <% if @power.errors.any? %>
    <div class="bs-component">
        <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <h4 class="messages">Error!</h4>
                <ul>
                <% @power.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
                </ul>
        </div>
  </div>
  <% end %>
  <div class="form-horizontal">
    <fieldset>
      <legend><%= @title_form %></legend>
       <div class="form-group">
          <%= f.label :day, 'Día', :class => 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.select(:day, options_for_select([['Seleccione', ''],
            ['Lunes', 1], 
            ['Martes', 2],
            ['Miercoles', 3],
            ['Jueves', 4],
            ['Viernes', 5],
            ['Sábado', 6],
            ['Domingo', 7]  ,],
             disabled: [''], selected: ['']), {}, {class: "form-control"}) %>
          </div>
        </div>
       <div class="form-group">
        <%= f.label :on, 'Encendido', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field :on, :class => 'form-control', :id => 'datetimepicker6'  %>
        </div>
        </div>
         <div class="form-group">
        <%= f.label :off, 'Apagado', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field :off, :class => 'form-control', :id => 'datetimepicker7'  %>
        </div>
        </div>
        </fieldset>
  <div class="actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary pull-right' %>
  </div>
     </div>
</div>
<% end %>




<script type="text/javascript">
 $(document).ready(function(){
  $(function () {
    $('#datetimepicker6').datetimepicker({
      format: 'H:mm'
      });
        });
  $(function () {
    $('#datetimepicker7').datetimepicker({
      format: 'H:mm'
      });
        });
 });
</script>
