<div class="container">
    <div class="login-content">
      <h2 class="rcontrasena">Recuperar contraseña</h2>
      <div class="brand"><%=image_tag("logo_dobled_tilo.png")%></div>
          <%= render 'shared/flash.html.erb' %>
        <!-- formulario de login de usuarios -->
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  			<%= devise_error_messages! %>
			<%= f.label :email, 'Correo electrónico'%><br />
    		<%= f.email_field :email, autofocus: true, :class => "form-control" %>            
            <%= f.submit "Cambiar contraseña", :class =>'btn btn-lg btn-primary btn-block rcontrasenabut' %>
            <%= render "devise/shared/links" %>
          <% end %>       
    </div>
</div><!-- /container -->
