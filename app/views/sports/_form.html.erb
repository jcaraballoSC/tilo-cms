<%= form_for(@sport) do |f| %>
  <% if @sport.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sport.errors.count, "error") %> prohibited this sport from being saved:</h2>

      <ul>
      <% @sport.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <fieldset>
      <legend><%= @title_form %></legend>
       <div class="form-group">
          <%= f.label :type, 'Deporte', :class => 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.select(:tipe, options_for_select([['Seleccione', ''],
            ['Futbol', 1] ,],
             disabled: [''], selected: ['']), {}, {class: "form-control"}) %>
          </div>
        </div>
       <div class="form-group">
        <%= f.label :url, 'Url', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field :url, :class => 'form-control'  %>
        </div>
        </div>
         <div class="form-group">
        <%= f.label :date, 'Fecha', :class => 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= f.text_field :date, :class => 'form-control', :id => 'datetimepicker4'  %>
        </div>
        </div>
        </fieldset>
  <div class="actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary pull-right' %>
  </div>
     </div>
</div>
<% end %>
<script type="text/javascript">
 $(document).ready(function(){
  $(function () {
    $('#datetimepicker4').datetimepicker({
      format: 'H:mm'
      });
        });
 });
</script>