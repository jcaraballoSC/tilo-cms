  <ul class="breadcrumb">
    <li><a href="/">Inicio</a></li>
    <li><a href="/users">Usuarios</a></li>
    <li class="active">Lista</li>
  </ul>
  <%= render 'shared/flash.html.erb' %>
  <h2 class="title-panel"><%= @title_main %></h2>
  <div class="button-rigth-action">
    <%= link_to 'Nuevo usuario', new_user_path, { :class=>"btn btn-primary" } %>
  </div>
  <table class="table table-striped table-hover ">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th class="table-center-text">Opciones</th>
    </tr>
    </thead>
    <tbody>
    <tr>
  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        
        <td width="140px">
          <div class="btn-group">
              <span class="btn btn-default btn-sm">Seleccione</span>
                <a href="#" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                      <li><%= link_to 'Mostrar', user %></li>
                      <li><%= link_to 'Editar', edit_user_path(user) %></li>
                      <li><%= link_to 'Eliminar',user, method: :delete, data: { confirm: 'Está seguro que desea eliminar la empresa?' } %></li>
                      <li><%=  link_to "Permisos", permissions_path(user.id) %></li>
                  </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>